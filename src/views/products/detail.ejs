<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container product-detail">
  <h1 class="product-name"><%= product.name %></h1>

  <div class="product-info">
    <!-- Imagen del producto -->
    <img src="/images/<%= product.image %>" alt="<%= product.name %>" class="product-image">

    <div class="product-details">
      <!-- Descripción del producto -->
      <p class="product-description"><%= product.description %></p>

      <!-- Precio del producto -->
      <p class="product-price">$<%= product.price %></p>

      <!-- Botón para editar el producto -->
      <a href="/products/<%= product.id %>/edit" class="btn-primary edit-product-btn">Editar producto</a>

      <!-- Formulario para eliminar el producto -->
      <form action="/products/<%= product.id %>?_method=DELETE" method="POST" class="delete-form">
        <button type="submit" class="btn-danger delete-product-btn">Eliminar producto</button>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
